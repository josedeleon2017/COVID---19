@model COVID_19.Models.PatientModel
@{
    ViewBag.Title = "NewEntry";
}

<ul class="breadcrumb">
    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
    <li class="active">Ingresar</li>
</ul>

<h2>NUEVO REGISTRO</h2>

<hr />

<center>
    <h4>@ViewBag.Result</h4>
</center>
<br />
@using (Html.BeginForm("NewEntry", "Patient", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form class="form-horizontal">
        <fieldset>

            <div class="form-group">
                <label for="inputNombre" class="col-lg-2 control-label">Nombre<span class="text-danger">*</span></label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputNombre" placeholder="Nombre del paciente" name="Nombre">
                </div>
            </div>

            <div class="form-group">
                <label for="inputApellido" class="col-lg-2 control-label">Apellido<span class="text-danger">*</span></label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputApellido" placeholder="Apellido del paciente" name="Apellido">
                </div>
            </div>

            <div class="form-group">
                <label for="inputDate" class="col-lg-2 control-label">Fecha de nacimiento<span class="text-danger">*</span></label>
                <div class="col-lg-10">
                    @Html.EditorFor(model => model.FechaDeNacimiento, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <label for="inputCUI" class="col-lg-2 control-label">CUI<span class="text-danger">*</span></label>
                <div class="col-lg-10">
                    <input type="number" class="form-control" id="inputCUI" placeholder="CUI del paciente" name="CUI">
                </div>
            </div>

            <div class="form-group">
                <label for="inputDepartamento" class="col-lg-2 control-label">Departamento<span class="text-danger">*</span></label>
                <div class="col-lg-10">
                    <select multiple="" class="form-control" name="Departamento">
                        <option>Alta Verapaz</option>
                        <option>Baja Verapaz</option>
                        <option>Chimaltenango</option>
                        <option>Chiquimula</option>
                        <option>El Progreso</option>

                        <option>Escuintla</option>
                        <option>Guatemala</option>
                        <option>Huehuetenango</option>
                        <option>Izabal</option>
                        <option>Jalapa</option>

                        <option>Jutiapa</option>
                        <option>Péten</option>
                        <option>Quetzaltenango</option>
                        <option>Quiché</option>
                        <option>Retalhuleu</option>

                        <option>Sacatepéquez</option>
                        <option>San Marcos</option>
                        <option>Santa Rosa</option>
                        <option>Sololá</option>
                        <option>Suchitepéquez</option>

                        <option>Totonicapán</option>
                        <option>Zacapa</option>

                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="inputMunicipio" class="col-lg-2 control-label">Municipio<span class="text-danger">*</span></label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputMunicipio" placeholder="Municipio de residencia" name="Municipio">
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-2 control-label">Sintomas<span class="text-danger">*</span></label>
                <div class="col-lg-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="Sintoma1"> Fiebre
                        </label>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="Sintoma2"> Tos seca
                        </label>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="Sintoma3"> Cansancio
                        </label>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="Sintoma4"> Dificultad respiratoria
                        </label>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="Sintoma5"> Escalofríos y dolores corporales
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="textDescripcionOpcional" class="col-lg-2 control-label">Descripción<span class="text-danger">*</span></label>
                <div class="col-lg-10">
                    <textarea class="form-control" rows="2" id="DescripcionOpcional" name="Descripcion"></textarea>
                    <span class="help-block">Descripción del posible contagio (Si llena este campo no podrá agregar descripción por archivo de texto)</span>
                </div>
            </div>

            <div class="form-group">
                <label for="inputDescripcion" class="col-lg-2 control-label"></label>
                <div class="col-lg-10">
                    <input type="file" name="postedFile">
                </div>
            </div>

            <br />

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="reset" class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>

        </fieldset>
    </form>
}