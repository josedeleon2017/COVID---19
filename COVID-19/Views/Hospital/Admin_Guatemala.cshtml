    <li>@Html.ActionLink("Simulación", "Simulation", "Hospital")</li>
    <li class="active">Hospital Guatemala</li>
</ul>

<h2>GUATEMALA</h2>
<hr />


<h4>Departamentos Asignados</h4>
<p>
    <ul>
        <li>Guatemala</li>
